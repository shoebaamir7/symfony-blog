{% trans_default_domain 'FOSUserBundle' %}

<div class="container-fluid bg-1-login">
    <section>
        <div class="row">
            <div class="col-md-offset-4 col-md-4">
                <img src="https://cdn0.iconfinder.com/data/icons/large-glossy-icons/512/User_login.png" class="img-responsive img-circle margin" style="display:inline" alt="Login" width="100" height="350">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path("fos_user_security_check") }}" method="post" novalidate>
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                    <div class="form-group">
                        <label for="username">{{ 'Username'|trans }}</label>
                        <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" required="required" />
                    </div>

                    <div class="form-group">
                        <label for="password">{{ 'Password'|trans }}</label>
                        <input type="password" id="password" name="_password" required="required" class="form-control"/>
                    </div>

                    <div class="form-group col-lg-2" style='padding-left: 0px'>
                        <input type="submit" id="_submit" class="form-control btn btn-primary" name="_submit" value="{{ 'Submit'|trans }}" />
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>